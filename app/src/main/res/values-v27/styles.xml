<resources>
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <item name="android:windowLightNavigationBar">true</item>
        <item name="android:navigationBarColor">@color/colorNavBar</item>
        <item name="android:navigationBarDividerColor">@color/colorNavDivider</item>

        <!-- Repeating here even though already declared in main styles.xml file otherwise settings lost on APK v28+ -->
        <item name="windowActionModeOverlay">true</item>
        <item name="actionModeBackground">@color/colorActionBar</item>
        <item name="preferenceTheme">@style/AppTheme.PreferenceThemeOverlay</item>
    </style>
</resources>